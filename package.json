{
  "name": "firebird-native",
  "version": "1.0.0",
  "description": "Native connection to Firebird database using ibpp library in NodeJS",
  "main": "index.js",
  "gypfile": true,
  "directories": {
    "doc": "doc"
  },
  "scripts": {
